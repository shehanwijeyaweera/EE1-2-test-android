<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/orders_mainLayout"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp">


    <TextView
        android:id="@+id/Orders_id_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order ID" />

    <TextView
        android:id="@+id/orders_datepurchased_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Purchased"
        android:layout_toRightOf="@+id/Orders_id_admin"
        android:layout_toEndOf="@+id/Orders_id_admin"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/orders_status_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_toRightOf="@+id/orders_datepurchased_admin"
        android:layout_toEndOf="@+id/orders_datepurchased_admin"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/orders_shippingstatus_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping status"
        android:layout_toRightOf="@+id/orders_status_admin"
        android:layout_toEndOf="@+id/orders_status_admin"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/orders_custFName_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FirstName"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/orders_custLName_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LastName"
        android:layout_toRightOf="@+id/orders_custFName_admin"
        android:layout_toEndOf="@+id/orders_custFName_admin"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/orders_viewOrder_adminbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/orders_refund_adminbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refund"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="50dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>