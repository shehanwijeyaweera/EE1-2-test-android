<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/orders_mainLayout">


    <TextView
        android:id="@+id/Orders_id_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="order ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orders_datepurchased_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Date Purchased"
        app:layout_constraintStart_toEndOf="@+id/Orders_id_admin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orders_status_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="Status"
        app:layout_constraintStart_toEndOf="@+id/orders_datepurchased_admin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orders_shippingstatus_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Shipping status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/orders_status_admin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orders_custFName_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="FirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Orders_id_admin" />

    <TextView
        android:id="@+id/orders_custLName_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="LastName"
        app:layout_constraintStart_toEndOf="@+id/orders_custFName_admin"
        app:layout_constraintTop_toBottomOf="@+id/orders_datepurchased_admin" />

    <Button
        android:id="@+id/orders_viewOrder_adminbtn"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:text="View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/orders_custLName_admin"
        app:layout_constraintTop_toBottomOf="@+id/orders_shippingstatus_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>