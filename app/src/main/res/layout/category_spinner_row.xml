<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/categoryspinner_categoryId"
        android:gravity="center"
        android:text="ID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryspinner_categoryName"
        android:layout_alignBottom="@+id/categoryspinner_categoryId"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/categoryspinner_categoryId"
        android:text="Category Name"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_toRightOf="@+id/categoryspinner_categoryId" />

</RelativeLayout>